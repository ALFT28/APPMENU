<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPMENU.Ejercicio6"
             Title="Ejercicio6">

    <ScrollView>

        <VerticalStackLayout Margin="50">

            <Label Text="Convertidor de Pesos Mexicanos a Dolar"
         HorizontalOptions="Center"
         VerticalOptions="Center"
         Margin="20"
         FontSize="35"
         FontFamily="Ariel"/>

            <Entry 
      Placeholder="Pesos Mexicanos"
      x:Name="Entry1"
       Margin="20"
      FontSize="15"
      />

            <Entry 
       Placeholder="Dolar"
       x:Name="Entry2"
       Margin="20"
       IsEnabled="False"
       TextColor="White"
       FontSize="15"
       />

            <Button 
      Text="Convertir"
      Clicked="Button_Clicked"
      Margin="15"
      FontSize="15"
      
      />

            <Button 
     Text="Limpiar"
     Clicked="Limpiar_Button"
     Margin="15"
     FontSize="15"
     
   />


        </VerticalStackLayout>




    </ScrollView>



</ContentPage>